{
  "name": "hl-electron-vue3",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/electron/index.js",
  "scripts": {
    "dev": "vite",
    "build": "rimraf dist && vue-tsc --noEmit && vite build && electron-builder"
  },
  "debug": {
    "env": {
      "VITE_DEV_SERVER_HOSTNAME": "127.0.0.1",
      "VITE_DEV_SERVER_PORT": 3344,
      "VITE_DEV_SERVER_URL": "http://127.0.0.1:3344"
    }
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.0.10",
    "axios": "^1.3.4",
    "echarts": "^5.4.1",
    "electron-window-state": "^5.0.3",
    "element-plus": "^2.2.32",
    "font-awesome": "^4.7.0",
    "js-cookie": "^3.0.1",
    "mitt": "^3.0.0",
    "nprogress": "^0.2.0",
    "pinia": "^2.0.32",
    "qrcodejs2-fixes": "^0.0.2",
    "screenfull": "^6.0.2",
    "sortablejs": "^1.15.0",
    "vue": "^3.2.37",
    "vue-clipboard3": "^2.0.0",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/clipboard": "^2.0.7",
    "@types/node": "^18.14.5",
    "@types/nprogress": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vue/compiler-sfc": "^3.2.47",
    "dotenv": "^16.0.3",
    "electron": "^21.2.2",
    "electron-builder": "^23.3.3",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.35.0",
    "eslint-plugin-vue": "^9.9.0",
    "less": "^4.1.2",
    "prettier": "^2.8.4",
    "rimraf": "^3.0.2",
    "sass": "^1.58.3",
    "sass-loader": "^13.2.0",
    "typescript": "^4.5.4",
    "vite": "^3.0.8",
    "vite-plugin-electron": "^0.10.2",
    "vue-eslint-parser": "^9.1.0",
    "vue-tsc": "^1.0.9"
  },
  "build": {
    "appId": "com.electron.desktop",
    "productName": "ElectronVueVite",
    "asar": true,
    "copyright": "Copyright Â© 2022 XingXingZaiXian",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist"
    ],
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  }
}
